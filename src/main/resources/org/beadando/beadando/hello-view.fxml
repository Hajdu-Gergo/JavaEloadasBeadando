   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
          <Label fx:id="welcomeText" text="Üdvözöllek az alkalmazásban!">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Label fx:id="welcomeText1" text="A funkciók futtatásához kattints valamelyik menüre felül!" />
      </children>
      <padding>
         <Insets left="10.0" />
      </padding>
   </VBox>
</VBox>
