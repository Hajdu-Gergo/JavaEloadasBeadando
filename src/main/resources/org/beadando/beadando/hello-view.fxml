    <padding>
        <Insets bottom="0" left="0" right="0" top="0" />
    </padding>
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="Adatbázis">
                <items>
                    <MenuItem onAction="#adatbazismegnyit" text="Olvas" />
                    <MenuItem onAction="#adatbazismegnyit" text="Olvas 2" />
                    <MenuItem onAction="#adatbazismegnyit" text="Ír" />
                    <MenuItem onAction="#adatbazismegnyit" text="Módosít" />
                    <MenuItem onAction="#adatbazismegnyit" text="Töröl" />
                </items>
            </Menu>
        </menus>
        <menus>
            <Menu text="SOAP">
                <items>
                    <MenuItem onAction="#TesztMetod" text="Grafikon" />
                </items>
            </Menu>
        </menus>

        <menus>
            <Menu text="FOREX">
                <items>
                    <MenuItem onAction="#szamlainfo" text="Számlainformáció" />
                    <MenuItem onAction="#aktarak" text="Aktuális árak" />
                    <MenuItem onAction="#histarak" text="Historikus árak" />
                    <MenuItem onAction="#poznyit" text="Pozíció nyitás" />
                    <MenuItem onAction="#TesztMetod" text="Pozíció zárás" />
                    <MenuItem onAction="#TesztMetod" text="Nyitott pozíciók" />
